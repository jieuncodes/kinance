{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/types": [
                "./src/types/*"
            ],
            "@/ui": [
                "./src/ui/*"
            ],
        },
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "types": [
        "jest",
        "node"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}